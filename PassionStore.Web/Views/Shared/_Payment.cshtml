@using PassionStore.Web.Models.Views
@model PaymentView

<h4 class="mb-4">Thông Tin Thanh Toán</h4>
<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="NameOnCard" class="form-label">Tên Trên Thẻ</label>
        <input asp-for="NameOnCard" class="form-control" />
        <span asp-validation-for="NameOnCard" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Số Thẻ</label>
        <div id="card-number" class="form-control"></div>
        <span id="card-number-error" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Ngày Hết Hạn</label>
        <div id="card-expiry" class="form-control"></div>
        <span id="card-expiry-error" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">CVV</label>
        <div id="card-cvc" class="form-control"></div>
        <span id="card-cvc-error" class="text-danger"></span>
    </div>
</div>