@using PassionStore.Shared.DTOs.Auth.Request
@model LoginRequest
@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h2 class="text-center mb-4">Đăng Nhập</h2>
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-action="Index" asp-controller="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email *</label>
                    <input asp-for="Email" class="form-control" placeholder="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mật Khẩu *</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Mật Khẩu" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <a asp-action="Index" asp-controller="Forgot">Quên Mật Khẩu?</a>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-danger mb-3">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-red hvr-sweep-to-right dark-sweep">Đăng Nhập</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <p>Chưa có tài khoản? <a asp-action="Index" asp-controller="Register">Đăng Ký</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}